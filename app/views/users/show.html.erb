
<div class="card text-center">
  <div class="card-header">
    <h4>マイページ</h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">
    <% if @user.image? %>                                                              
      <%= image_tag @user.image.url, class: "rounded-circle", size: "150x150" %>
    <% else %>
      <%= image_tag "default.png", class: "rounded-circle", size: "150x150" %>
    <% end %>
<br>
    </h5>
    <p class="card-text">
    名前 : <%= @user.name %><br>
    メールアドレス : <%= @user.email %><br>
    プロフィール : <%= @user.profile %><br>
    <% if current_user.id == @user.id %>
      <%= link_to "編集する", edit_user_registration_path %>
    <% end %>
    
    </p>
    <%= render "relationships/follow_button", user: @user %>
  </div>
  <div class="card-footer text-muted">
    <h4>ユーザーの投稿一覧</h4>
    <% @user.posts.each do |t| %>
  <%= t.user.name %>
  <%= t.body %>
  <%= image_tag set_image(t), size: "150×150"%>
<% end %>
<br>
<%= link_to "一覧に戻る", posts_path %>

  </div>
</div>
